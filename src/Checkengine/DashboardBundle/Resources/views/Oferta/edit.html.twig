{% extends 'DashboardBundle::layout.html.twig' %}

{% block body %}
    {% include 'DashboardBundle:Default:navegador.html.twig' with {'tabActive': 'ofertas' } %}
    <div class="container container-principal">
        <form action="{{ path('ofertas_update',{'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
            <input name="_method" value="put" type="hidden"/>
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        Editar Oferta "{{entity.titulo}}"
                    </h3>
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}  
                    <div class="form-group">
                        {{ form_widget(form.titulo,{'attr':{'class':'form-control','placeholder':'Titulo'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.descripcion,{'attr':{'class':'form-control','placeholder':'Descripcion'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.tipoOferta,{'attr':{'class':'form-control','placeholder':'Tipo de oferta'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.oferta,{'attr':{'class':'form-control','placeholder':'Oferta'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.inicia,{'attr':{'class':'form-control','placeholder':'Inicia'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.termina,{'attr':{'class':'form-control','placeholder':'Termina'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.tipoPago,{'attr':{'class':'form-control','placeholder':'Tipo de pago'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.marcas,{'attr':{'class':'form-control','placeholder':'Marcas'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.modelos,{'attr':{'class':'form-control','placeholder':'Modelos'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.sucursales,{'attr':{'class':'form-control','placeholder':'Sucursales'}}) }}
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="{{path('ofertas')}}" class="btn btn-primary">Regresar</a>
                    <input type="submit" class="btn btn-warning btn-sm pull-right" name="botonGuardar" id="botonGuardar" value="Actualizar"/>
                    {{ form_rest(form) }}
                </div>        
            </div>
        </form>
    </div>
{% endblock %}
