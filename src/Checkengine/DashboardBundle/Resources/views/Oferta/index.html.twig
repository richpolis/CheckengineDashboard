{% extends 'DashboardBundle::layout.html.twig' %}

{% block body -%}

    {% include 'DashboardBundle:Default:navegador.html.twig' with {'tabActive': 'ofertas' } %}
    <div class="container container-principal">
        <br>
        <div class="well">
            <form action="{{path('ofertas')}}" class="form-inline" role="search">
                <div class="form-group row" style="width: 100%;">
                    <label class="col-md-4 text-center">Buscar oferta por: </label>    
                    <div class="input-group col-md-8">
                        <input placeholder="Titulo" class="form-control" name="buscar"
                               type="text">
                        <span class="input-group-btn">
                            <input type="submit" class="btn btn-warning" value="Buscar"/>
                        </span>
                    </div><!-- /input-group -->
                </div>
            </form>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">
                    Empresas
                </h3>
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead class="text-center">
                        <tr>
                            <th class="text-center">
                                Titulo
                            </th>
                            <th class="text-center">
                                Tipo de oferta
                            </th>
                            <th class="text-center">
                                Oferta
                            </th>
                            <th class="text-center">
                                Inicia
                            </th>
                            <th class="text-center">
                                Termina
                            </th>
                            <th class="text-center">
                                Accion
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for oferta in pagination %}  
                            <tr>
                                <td class="text-center">
                                    {{oferta.titulo}}
                                </td>
                                <td class="text-center">
                                    {{oferta.stringTipoOferta}}
                                </td>
                                <td class="text-center">
                                    {{oferta.oferta}}
                                </td>
                                <td class="text-center">
                                    {{oferta.inicia | date('d-m-Y') }}
                                </td>
                                <td class="text-center">
                                    {{oferta.termina | date('d-m-Y')}}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="{{ url('ofertas_show', { 'id' : oferta.id }) }}" class="btn btn-warning"> Mostar</a>
                                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="{{ url('ofertas_show', { 'id' : oferta.id }) }}">Mostrar</a></li>
                                            <li><a href="{{ url('ofertas_edit', { 'id' : oferta.id }) }}">Editar</a></li>
                                            <li class="divider"></li>
                                            <li><a href="javascript: if (confirm('Desea elminar el sueÃ±o seleccionado?')) { location.href='{{ url('ofertas_delete', { 'id' : oferta.id }) }}';}">Eliminar</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <a href="{{ path('ofertas_export') }}" class="btn btn-default btn-sm">Exportar</a>
                <a href="{{ path('ofertas_new') }}" class="btn btn-warning btn-sm pull-right">Nuevo Empresa</a>
            </div>
        </div>
        <div class="container">

        </div>
        <div class="container text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
