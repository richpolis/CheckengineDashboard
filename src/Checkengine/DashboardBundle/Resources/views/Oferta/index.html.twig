{% extends 'DashboardBundle::layout.html.twig' %}

{% block body -%}
    <h1>Oferta list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Tipooferta</th>
                <th>Oferta</th>
                <th>Banner</th>
                <th>Inicia</th>
                <th>Termina</th>
                <th>Tipopago</th>
                <th>Marcas</th>
                <th>Modelos</th>
                <th>Clicks</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ofertas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.tipoOferta }}</td>
                <td>{{ entity.oferta }}</td>
                <td>{{ entity.banner }}</td>
                <td>{% if entity.inicia %}{{ entity.inicia|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.termina %}{{ entity.termina|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.tipoPago }}</td>
                <td>{{ entity.marcas }}</td>
                <td>{{ entity.modelos }}</td>
                <td>{{ entity.clicks }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ofertas_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ofertas_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ofertas_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
