{% extends 'DashboardBundle::layout.html.twig' %}

{% block body -%}
    <h1>Pregunta</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pregunta</th>
                <td>{{ entity.pregunta }}</td>
            </tr>
            <tr>
                <th>Respuesta</th>
                <td>{{ entity.respuesta }}</td>
            </tr>
            <tr>
                <th>Orden</th>
                <td>{{ entity.orden }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('preguntas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('preguntas_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
