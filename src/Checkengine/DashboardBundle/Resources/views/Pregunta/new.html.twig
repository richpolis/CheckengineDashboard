{% extends 'DashboardBundle::layout.html.twig' %}

{% block body %}
    {% include 'DashboardBundle:Default:navegador.html.twig' with {'tabActive': 'preguntas' } %}
    <div class="container container-principal">
        <form action="{{ path('preguntas_create') }}" method="post" {{ form_enctype(form) }}>
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        Nueva pregunta
                    </h3>
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}  
                    <div class="form-group">
                        {{ form_widget(form.pregunta,{'attr':{'class':'form-control','placeholder':'Pregunta'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.respuesta,{'attr':{'class':'form-control','placeholder':'Respuesta'}}) }}
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="{{path('preguntas')}}" class="btn btn-primary">Regresar</a>
                    <input type="submit" class="btn btn-warning btn-sm pull-right" name="botonGuardar" id="botonGuardar" value="Guardar"/>
                    {{ form_rest(form) }}
                </div>        
            </div>
            <div class="container">

            </div>
            <div class="container text-center">
            </div>
        </form>
    </div>
{% endblock %}
