{% extends 'DashboardBundle::layout.html.twig' %}

{% block body %} 
    <figure class="imagen-responsive text-center" style="margin-top: 10%; margin-bottom: 10%;">
        <img src="{{asset('images/logo.png')}}"/>
    </figure>

    <!-- Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="contactoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="contactoLabel">Login</h4>
                </div>
                <div class="modal-body">
                    <form id="formLogin" class="form center-block" method="post" onsubmit="return false;">
                        <div class="form-group">
                            <input class="form-control input-lg" placeholder="Correo electronico"
                                   type="text" name="_username" value="{{ last_username }}" required autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-lg" placeholder="Password" type="password" name="_password" required>
                        </div
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-warning" id="botonLogin">Entrar</button>
                </div>
            </div>
        </div>
    </div>
                                   
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/vendor/modernizr-2.6.2-respond-1.1.0.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/vendor/jquery-1.11.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/vendor/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/plugins.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function(){
           setTimeout(function(){
               $("#loginModal").modal("show");
           },1000); 
            
           $("#botonLogin").on("click",function(){
               var form = $("#formLogin");
               $.ajax({
                   url: '{{path('login_check')}}',
                   data: form.serialize(),
                   dataType: 'json',
                   type: 'POST',
                   success: function(data){
                        if(data.success == true){
                            location.href = '{{path('usuarios')}}';
                        }else{
                            $("#mensajeError").text(data.message);
                            $("#mensajeError").fadeIn('fast',function(){
                               setTimeout(function(){
                                   $("#mensajeError").fadeOut('fast');
                               },2000); 
                            });
                        }
                   },
                   error: function(){
                       
                   }
               })
           }); 
        });
    </script>     
{% endblock javascripts %}
