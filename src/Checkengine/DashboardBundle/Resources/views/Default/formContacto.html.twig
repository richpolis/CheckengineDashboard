<div id="mensajeErrorContacto" class="alert alert-danger" style="display:none;"></div>
<div id="mensajeExitoContacto" class="alert alert-success" style="display:none;"></div>
<form id="formContacto" onsubmit="return false;" action="{{path('frontend_contacto')}}" method="post" class="form-contacto form-horizontal" novalidate="novalidate" role="form">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'nombre'}}) }}
                    <span class="errores"> 
                        {{ form_errors(form.name) }}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Email:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'email'}}) }}
                    <span class="errores"> 
                        {{ form_errors(form.email) }}
                    </span>
                </div>
            </div>
			<div class="form-group">
                <label class="col-sm-3 control-label">Telefono:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.telefono, {'attr': {'class': 'form-control','placeholder':'telefono'}}) }}
                    <span class="errores"> 
                        {{ form_errors(form.telefono) }}
                    </span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Asunto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control','placeholder':'asunto'}}) }}
                    <span class="errores"> 
                        {{ form_errors(form.subject) }}
                    </span>
                </div>
            </div>
        </div>
        <div class="col-sm-12">        
            <div class="form-group">
                <label class="col-sm-3 control-label">Mensaje:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.body, {'attr': {'class': 'form-control','placeholder':'mensaje'}}) }}
                    <span class="errores"> 
                        {{ form_errors(form.body) }}
                    </span>
                </div>
            </div>
			<div class="form-group">
				<input id="botonEnviar" type="submit" value="Enviar" class="form-contacto-control form-submit btn btn-default col-sm-offset-4">
				<img class="ajax-loader" src="/images/bx_loader.gif" alt="Enviando ..." style="visibility: hidden;">
			</div>
		</div>
    
    {{ form_rest(form) }}    
</form>
