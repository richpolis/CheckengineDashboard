{% extends '::base.html.twig' %}

{% block meta_tags %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block title %} {% endblock %}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">        
{% endblock meta_tags %}

{% block stylesheets %} 
    {% stylesheets
        'css/bootstrap.min.css'
        'css/main.css'
    filter='cssrewrite, ?uglifycss' output='css/compiled/all.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}


{% block content %}
    {% block nav %}
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                      <img alt="Checkengine" src="{{asset('images/logo_horizontal.jpg')}}" />
                    </a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" data-toggle="modal" data-target="#loginModal"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp;Login</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;Contacto</a></li>
                </ul>
            </div>
        </nav>
    {% endblock nav %}

    {% block header %}
    {% endblock header %}

    <div class="container">

        {% block body %}
        {% endblock body %}

        {% block footer %}
            <hr>
            <footer>
                <p>&copy; Company 2014</p>
            </footer>
        {% endblock footer %}
    </div> <!-- /container -->
{% endblock content %}

{% block javascripts %}
    {% javascripts
        'js/vendor/modernizr-2.6.2-respond-1.1.0.min.js'
        'js/vendor/jquery-1.11.1.min.js'
        'js/vendor/bootstrap.min.js'
        'js/*'
    filter='?uglifyjs' output='js/compiled/all.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
