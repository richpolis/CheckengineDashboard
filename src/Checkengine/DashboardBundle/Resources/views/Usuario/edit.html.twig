{% extends 'DashboardBundle::layout.html.twig' %}

{% block body %}
    {% include 'DashboardBundle:Default:navegador.html.twig' with {'tabActive': 'usuarios' } %}
    <div class="container container-principal">
        <form action="{{ path('usuarios_update',{'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
            <input name="_method" value="put" type="hidden"/>
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        Editar Usuario "{{entity.nombreCompleto}}"
                    </h3>
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}  
                    <div role="tabpanel">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#general" aria-controls="general" role="tab" data-toggle="tab">Datos generales</a></li>
                            <li role="presentation"><a href="#seguridad" aria-controls="seguridad" role="tab" data-toggle="tab">Seguridad</a></li>
                            <li role="presentation"><a href="#ubicacion" aria-controls="ubicacion" role="tab" data-toggle="tab">Ubicacion</a></li>
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="general">
                                <div class="form-group">
                                    {{ form_widget(form.nombre,{'attr':{'class':'form-control','placeholder':'Nombre'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.apellidos,{'attr':{'class':'form-control','placeholder':'Apellidos'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.celular,{'attr':{'class':'form-control','placeholder':'Celular'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.fechaNacimiento,{'attr':{'class':'form-control','placeholder':'Fecha de nacimiento'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.genero,{'attr':{'class':'form-control','placeholder':'Genero'}}) }}
                                </div>  
                            </div>
                            <div role="tabpanel" class="tab-pane" id="seguridad">
                                <div class="form-group">
                                    {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.password,{'attr':{'class':'form-control','placeholder':'Password'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.grupo,{'attr':{'class':'form-control','placeholder':'Permisos'}}) }}
                                </div>
                                <div class="form-group">
                                    <label class="checkbox">
                                      {{ form_widget(form.isActive) }}
                                      Activo
                                    </label>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="ubicacion">
                                <div class="form-group">
                                    {{ form_row(form.ubicacionLongitud,{'attr':{'class':'form-control','placeholder':'Longitud'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.ubicacionLatitud,{'attr':{'class':'form-control','placeholder':'Latitud'}}) }}
                                </div>
                            </div>          
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="{{path('usuarios')}}" class="btn btn-primary">Regresar</a>
                    <input type="submit" class="btn btn-warning btn-sm pull-right" name="botonGuardar" id="botonGuardar" value="Actualizar"/>
                    {{ form_rest(form) }}
                </div>        
            </div>
            <div class="container">

            </div>
            <div class="container text-center">
            </div>
        </form>
    </div>
{% endblock %}
