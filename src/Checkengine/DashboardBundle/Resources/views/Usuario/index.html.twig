{% extends 'DashboardBundle::layout.html.twig' %}

{% block body -%}

    {% include 'DashboardBundle:Default:navegador.html.twig' with {'tabActive': 'usuarios' } %}
    <h1>Es hora de trabajar !</h1>
    <div class="row">
    <p class="col-md-10">El contacto es la herramienta importante... entre ellos y nosotros !</p>
    <p class="col-md-2 text-center">
        <a href="{{ path('usuarios_export') }}" class="btn btn-default btn-sm">Exportar</a>
    </p>
    </div>
    <div class="container container-principal">
        <br>
        <div class="well">
            <form action="{{path('usuarios')}}" class="form-inline" role="search">
                <div class="form-group row" style="width: 100%;">
                    <label class="col-md-4 text-center">Buscar usuario por: </label>    
                    <div class="input-group col-md-8">
                        <input placeholder="nombre, apellidos, email" class="form-control" name="buscar"
                               type="text">
                        <span class="input-group-btn">
                            <input type="submit" class="btn btn-warning" value="Buscar"/>
                        </span>
                    </div><!-- /input-group -->
                </div>
            </form>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table">
                    <thead class="text-center">
                        <tr>
                            <th class="text-center">
                                Fecha
                            </th>
                            <th class="text-center">
                                Nombre
                            </th>
                            <th class="text-center">
                                Apellidos
                            </th>
                            <th class="text-center">
                                Region
                            </th>
                            <th class="text-center">
                                Comuna
                            </th>
                            <th class="text-center">
                                &nbsp;
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for usuario in pagination %}  
                            <tr>
                                <td class="text-center">
                                    {{usuario.createdAt|date('d-m-Y')}}
                                </td>
                                <td class="text-center">
                                    {{usuario.nombre}}
                                </td>
                                <td class="text-center">
                                    {{usuario.apellidos}}
                                </td>
                                <td class="text-center">
                                    {{usuario.region}}
                                </td>
                                <td class="text-center">
                                    {{usuario.comuna}}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="{{ url('usuarios_show', { 'id' : usuario.id }) }}" class="btn btn-warning"> Mostar</a>
                                        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="{{ url('usuarios_show', { 'id' : usuario.id }) }}">Mostrar</a></li>
                                            <li><a href="{{ url('usuarios_edit', { 'id' : usuario.id }) }}">Editar</a></li>
                                            <li class="divider"></li>
                                            <li><a href="javascript: if (confirm('Desea eliminar el registro seleccionado?')) { location.href='{{ url('usuarios_delete', { 'id' : usuario.id }) }}';}">Eliminar</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <!--div class="panel-footer">
                
                <a href="{{ path('usuarios_new') }}" class="btn btn-warning btn-sm pull-right">Nuevo Usuario</a>
            </div-->
        </div>
        <div class="container">

        </div>
        <div class="container text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
