@import 'nib'


box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments
	
opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

color_naranja = #FB8100
color_gris = #666666


body 
	padding-top 50px
	padding-bottom 20px
	& .container-principal
		min-height 60%

.navbar .nav p.color-naranja
	color color_naranja
	&.nombre-usuario
		font-size 16px

.navbar .nav a.link-nav-bar
	color color_gris
	text-decoration none
	&:hover 
		color color_naranja